<% include ../partials/header %> 
 <div class="container">
     <header class="jumbotron index-container">
         <div class="container index-content">
             <!-- <h1>Welcome To Online Tech Store!</h1>
             <p>You can buy all you want!</p> -->
             <p>
                <h1>Welcome to Tech Store</h1>
                <%if (isadmin === true) {%> 
                    <a class="btn btn-primary btn-warning" href="/techs/new">Add New Tech Product</a>
                <% } %>    
                <a href="/techs/filter" class="btn btn-primary btn-success">Filter All Active Product</a>
                <div style="width: 25%">
                <form action="/search" method="post">
                <div class="form-group input-text">
                    <input class="form-control" type="text" name="itemName" placeholder="Item Name">
                </div>
                <div class="form-group">
                    <button class="btn btn-s btn-primary btn-block">Search</button>
                </div>
                </div>
            </form>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% techs.forEach(function(tech){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= tech.image%>">
                   <div class="caption">
                       <h4><%= tech.name %></h4>
                   </div>
                   <p>
                    <%if (isadmin === true) {%>
                        <a href="/techs/<%= tech._id %>" class="btn btn-primary">More Info</a>
                    <% } else { %>    
                        <a href="/shoppingcart/<%= tech._id %>" class="btn btn-warning">Add to Cart</a>
                        <a class="btn btn-success" href="/techs/<%= tech._id %>">Details</a>
                    <% } %>    
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
    <% include ../partials/pagination %>
</div>

<% include ../partials/footer %>
