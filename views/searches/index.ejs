<% include ../partials/header %> 

 <div class="container">
     <header class="jumbotron index-container">
         <div class="container index-content">
             <h1>Search List:</h1>
             <p>
                <%if (isadmin === true) {%> 
                    <a class="btn btn-primary btn-warning" href="/techs/new">Add New Tech Product</a>
                <% } %>
                <a class="btn btn-primary btn-large btn-success" href="/techs/filter">Filter All Active Product</a>
                <div style="width: 25%">
                <form action="/search" method="post">
                <div class="form-group">
                    <input class="form-control" type="text" name="itemName" value="<%= item %>" placeholder="Item Name">
                </div>
                <div class="form-group">
                    <button class="btn btn-s btn-primary btn-block">Search</button>
                </div>
                </div>
            </form>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% techs.forEach(function(tech){ %>
          <% if(item == tech.name) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= tech.image %>">
                   <div class="caption">
                       <h4><%= tech.name %></h4>
                   </div>
                   <p>
                    <%if (isadmin === true) {%>
                        <a href="/techs/<%= tech._id %>" class="btn btn-primary">More Info</a>
                    <% } else { %>    
                        <a href="/wishlist/<%= tech._id %>" class="btn btn-warning">Add to Wish List</a>
                        <a class="btn btn-success" href="/techs/<%= tech._id %>/comments/new">Purchase</a>
                    <% } %>    
                </div>
            </div>
            <% } %>
        <% }); %>
    </div>
    <br>
      <a href="/techs">Go Back</a>
</div>

<% include ../partials/footer %>
